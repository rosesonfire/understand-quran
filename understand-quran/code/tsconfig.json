{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "incremental": false,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
        "@components": ["components"],
        "@components/*": ["components/*"],
        "@utils/*": ["utils/*"],
        "@styles/*": ["styles/*"],
        "@copies/*": ["copies/*"],
        "@config/*": ["config/*"],
        "@hooks": ["hooks"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
